{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": false,                                      
    "skipLibCheck": true,  
    "sourceMap": false,                               
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "doc",
    "logs",
    "dist"      
  ]
}